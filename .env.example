# Database (SQLite for local dev, swap to postgres:// for production)
DATABASE_URL="file:./dev.db"

# Solana RPC endpoint (defaults to mainnet-beta if not set)
NEXT_PUBLIC_SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# ============================================
# BRIDGE PROVIDERS (At least one required)
# ============================================

# Option 1: LI.FI - FREE TIER (No signup required!)
# Just set an integrator name (your app/project name)
LIFI_INTEGRATOR="tosolana"

# Option 2: LI.FI - API Key (for higher rate limits)
# Get a key at https://li.fi/ 
# LIFI_API_KEY=""

# Option 3: Rango Exchange 
# Get a key at https://app.rango.exchange/
RANGO_API_KEY="c6381a79-2817-4602-83bf-6a641a409e32"
# Public key for the Rango Widget (Universal mode)
NEXT_PUBLIC_RANGO_API_KEY="c6381a79-2817-4602-83bf-6a641a409e32"

# ============================================
# ADDITIONAL ROUTING PROVIDERS (optional)
# ============================================
# Jupiter (Solana-side routing; enable when wiring post-bridge swaps)
ENABLE_JUPITER_PROVIDER="false"
ENABLE_JUPITER_SWAP="false"
# JUPITER_QUOTE_URL="https://quote-api.jup.ag/v6/quote"
# JUPITER_SWAP_URL="https://quote-api.jup.ag/v6/swap"

# Socket/Bungee
# SOCKET_API_KEY=""

# Flashift
# FLASHIFT_API_KEY=""

# Wormhole direct bridge
ENABLE_WORMHOLE_PROVIDER="false"

# Allbridge
# ALLBRIDGE_API_KEY=""

# deBridge
# DEBRIDGE_API_KEY=""

# Symbiosis
# SYMBIOSIS_API_KEY=""

# Mayan
# MAYAN_API_KEY=""

# TON HTTP API Key (from https://toncenter.com/)
# TON_API_KEY=""

# ============================================
# OPTIONAL SETTINGS
# ============================================

# WalletConnect - for mobile wallet support
# Get a project ID at https://cloud.walletconnect.com/
# NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=""

# Admin API Key for token registry management (server-only, keep secret!)
ADMIN_API_KEY="change_me_in_production"

# Session auth signing secret for /api/execute/step wallet-auth challenges (server-only)
SESSION_AUTH_SECRET="replace_with_long_random_secret"

# Route signing secret for server-side route integrity verification (server-only)
# Generate with: openssl rand -hex 32
ROUTE_SIGNING_SECRET="replace_with_long_random_secret_for_route_signing"

# Allow experimental BTC/Cosmos/TON execution flows (unsafe for production; defaults off in production)
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_NON_EVM_EXECUTION="false"

# ============================================
# NON-EVM PROVIDER ENABLEMENT (Production Safety)
# ============================================
# These providers require server-side finality verification before enabling in production.
# They are automatically disabled in production unless explicitly enabled.
# ENABLE_THORCHAIN_PROVIDER="false"
# ENABLE_IBC_PROVIDER="false"
# ENABLE_TON_PROVIDER="false"

# ============================================
# RATE LIMITING (Upstash Redis - Recommended for Production)
# ============================================
# UPSTASH_REDIS_REST_URL="https://your-url.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# (Optional) Server-side Solana RPC for token verification
# SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
