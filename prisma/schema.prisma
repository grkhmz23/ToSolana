generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QuoteSession {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  completedAt      DateTime?
  sourceAddress    String
  solanaAddress    String
  provider         String
  routeId          String
  status           String   @default("idle")
  selectedRouteJson String
  currentStep      Int      @default(0)
  errorMessage     String?
  
  // For history - store key transfer details
  sourceChainId    String
  sourceToken      String
  sourceAmount     String
  destToken        String
  estimatedOutput  String
  
  steps            Step[]
}

model Step {
  id           String       @id @default(cuid())
  sessionId    String
  index        Int
  chainType    String
  status       String       @default("idle")
  txHashOrSig  String?
  metaJson     String?
  session      QuoteSession @relation(fields: [sessionId], references: [id])

  @@unique([sessionId, index])
}

// Project Token Registry for Official 1:1 Bridges
model ProjectToken {
  id                    String   @id @default(cuid())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  sourceChainType       String   @default("evm") // "evm" for future-proofing
  sourceChainId         Int      // Ethereum=1, etc.
  sourceTokenAddress    String   // Lowercased ERC20 address
  
  name                  String
  symbol                String
  decimals              Int
  
  solanaMint            String   // Base58 SPL mint address
  
  mode                  String   // "WRAPPED" | "NTT" | "OFT"
  status                String   @default("DRAFT") // "DRAFT" | "ACTIVE" | "DISABLED"
  
  providerConfig        String?  @default("{}") // JSON string for config
  
  verifiedAt            DateTime?
  notes                 String?
  
  verificationLogs      TokenVerificationLog[]
  
  @@unique([sourceChainId, sourceTokenAddress])
  @@index([status, symbol])
}

model TokenVerificationLog {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  
  projectTokenId  String
  projectToken    ProjectToken @relation(fields: [projectTokenId], references: [id])
  
  ok              Boolean
  details         String   @default("{}") // JSON string for verification details
}
